{
  "compilerOptions": {
    "baseUrl": ".",
    "listFiles": true,
    "target": "esnext",
    "module": "esnext",
    "lib": ["dom", "dom.iterable", "esnext"],
    "allowJs": true,
    "skipLibCheck": true,
    "strict": true,
    "forceConsistentCasingInFileNames": true,
    "noEmit": true,
    "esModuleInterop": true,
    "moduleResolution": "node",
    "resolveJsonModule": true,
    "isolatedModules": true,
    "jsx": "preserve",
    "incremental": true,
    "paths": {
      "@lib/*": ["shared/lib/*"],
      "@modules/*": ["modules/*"],
      "@utils/*": ["utils/*"],
      "@config/*": ["config/*"],
      "@moduleConfig/*": ["modules/config/*"],
      "@assets/*": ["assets/*"],
      "@components/*": ["shared/components/core/*"],
      "@styles/*": ["shared/components/styles/*"]
    }
  },
  "include": ["next-env.d.ts", "**/*.d.ts", "**/*.ts", "**/*.tsx", "**/*.js"],
  "exclude": ["node_modules"]
}
